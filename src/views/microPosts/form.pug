
mixin postForm(action, method, post)
    form(action=action, method=method)
            div.mt-5
                label(for='title') Title
                input(type='text', name='title', value= post ? post.title : "", id='title', class='w-full p-2 border border-gray-300 rounded-lg', required)
            div.mt-5
                label(for='content') Content
                textarea(name='content', id='content',  class='w-full p-2 border border-gray-300 rounded-lg', required)
                    if post
                        = post.content
            div.mt-5
                button(type='submit', class='bg-blue-500 text-white p-2 rounded-lg') Submit